            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data2}}
        <tr>
            <td>{{this.idSalesDetail}}</td>
            <td>{{this.sid}}</td>
            <td>{{this.gid}}</td>
            <td>{{this.salesDate}}</td>
            <td>{{this.orderQty}}</td>
            <td>{{this.unitPrice}}</td>
            <td>{{this.lineTotal}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</html>
